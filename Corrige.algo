ALGORITHM Premiere_tache
VAR
    sentence, nbreMots: STRING;
    i: INTEGER;
BEGIN
    nbreMots:=1;
    Write("Donnez une phrase")
    Read(sentence)
    IF (sentence[sentence.length-1] === ".") THEN
        FOR i FROM 0 TO sentence.length-1 STEP 1  DO
            IF (sentence[i]=== " ") THEN
                nbreMots= nbreMots +1
            END_IF
        END_FOR
    END_IF
END